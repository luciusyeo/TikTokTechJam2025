{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017",           // or "ES2015"
    "lib": ["ES2017", "DOM"],     // include ES2017 so Promise is recognized
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
}